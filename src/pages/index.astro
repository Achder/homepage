---
import Me from '../images/me.webp'
import MePig from '../images/pig.jpg'
import PageLayout from '../layouts/PageLayout.astro'
import LinkButton from '../components/LinkButton.astro'
import Heading from '../components/Heading.astro'
import StyledLink from '../components/StyledLink.astro'
---

<style>
    img {
        animation-iteration-count: infinite;
        animation-duration: 15s;
        animation-name: wobble;
        animation-direction: normal;
        animation-timing-function: linear;
    }

    @keyframes wobble {
        0% {
            transform: perspective(500px) rotate3d(1, 0, 1, 0deg);
        }

        25% {
            transform: perspective(500px) rotate3d(0, 1, 1, -2deg);
        }

        73% {
            transform: perspective(500px) rotate3d(1, 1, 0, 2deg);
        }

        100% {
            transform: perspective(500px) rotate3d(1, 0, 1, 0deg);
        }
    }
</style>

<PageLayout
    description="I'm Thomas Meerpohl, a freelancer based in Dresden, Germany. I'm a fullstack javascript web developer. I build websites, webapplications and mobile cross-plaform apps."
>
    <Heading type="h1" class="grid gap-2">
        <p class="text-3xl">Hi, I'm your freelance developer</p>
        <p class="leading-none">Thomas Meerpohl</p>
    </Heading>

    <section class="w-full text-2xl text-pretty grid gap-8 justify-items-start">
        <img
            id="profile"
            class="w-full aspect-square sm:aspect-[2/1] object-cover shadow-2xl rounded-sm"
            src={Me.src}
            loading="eager"
            alt="An image of me, Thomas Meerpohl"
        />

        <LinkButton href="mailto:thomas.meerpohl@gmail.com" class="w-full sm:w-auto"> Contact me </LinkButton>
    </section>

    <section class="w-full text-xl text-pretty grid gap-5 justify-items-start about py-12 rounded-sm">
        <Heading type="h2">About me</Heading>

        <article>
            <p>I'm a full-stack developer from Dresden, Germany.</p>
            <p>
                My focus is on building applications <StyledLink href="/what">using web technologies</StyledLink>
            </p>
            <p>
                In my 8 years professional career, I have worked in large international SCRUM teams as well as small and
                highly dynamic startups.
            </p>
            <p>The products I helped develop are being used by thousands of users around the world.</p>
            <p>
                If you need assistance with your next project, feel free to <StyledLink
                    href="mailto:thomas.meerpohl@gmail.com">contact me</StyledLink
                >and I will provide you with a detailed CV.
            </p>
        </article>
    </section>
</PageLayout>
