---
import Me from '../images/me.webp'
import Preview from '../components/Preview.astro'
import PageLayout from '../layouts/PageLayout.astro'
import LinkButton from '../components/LinkButton.astro'
import Heading from '../components/Heading.astro'
import StyledLink from '../components/StyledLink.astro'
import { Image } from 'astro:assets'
---

<style>
    img {
        animation-iteration-count: infinite;
        animation-duration: 10s;
        animation-name: wobble;
        animation-direction: alternate;
    }

    @keyframes wobble {
        from {
            filter: hue-rotate(0deg);
        }

        to {
            filter: hue-rotate(30deg);
        }
    }
</style>

<PageLayout
    description="I'm Thomas Meerpohl, a freelancer based in Dresden, Germany. I'm a fullstack javascript web developer. I build websites, webapplications and mobile cross-plaform apps."
>
    <Heading type="h1" class="grid gap-2">
        <p class="text-3xl no-underline decoration-8">Hi, I'm your freelance developer</p>
        <p class="leading-none decoration-8">Thomas Meerpohl</p>
    </Heading>

    <section class="w-full text-2xl text-pretty grid gap-10 pb-12">
        <Image
            id="profile"
            class="w-full aspect-square sm:aspect-2/1 object-cover shadow-2xl rounded-xs outline outline-4 -outline-offset-4 outline-color"
            src={Me}
            alt="A young and handsome Thomas Meerpohl"
            loading="eager"
        />

        <LinkButton
            href="mailto:thomas.meerpohl@gmail.com"
            class="w-full sm:w-auto flex items-center justify-center text-2xl"
        >
            <span class="text-[1.6em]">➪</span>Contact me<span class="text-[1.6em] rotate-180">➪</span>
        </LinkButton>
    </section>

    <section class="w-full grid gap-10 py-12 grid-cols-[repeat(auto-fit,minmax(250px,1fr))]">
        <Heading type="h2" class="col-start-1 col-end-[-1]">Gallery</Heading>

        <Preview
            src="/png/wordy?bg-start=%23bd008a&bg-end=%23000000&text=pow%21&fill-end=%23d4ff00&stroke-width=6.8&stride=-0.3&shapes=300&x-amplitude=40&wobble=1&font-size=99&rotation=28&stroke-end=%23fb00ff&fill-mid=%238000ff&fill-start=%23ff00ae&fill-alpha-scale=-0.39&font-scale=0.82&stroke-start=%238c00ff&stroke-alpha=1&y-amplitude=125&x-wobble-freq=0.5&color-space=hwb&stroke-alpha-scale=-1&bg-angle=101"
        />
