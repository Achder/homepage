---
type Props = {
    label: string
} & astroHTML.JSX.InputHTMLAttributes

const { class: className, label, ...rest } = Astro.props
---

<label class:list={['text-lg grid gap-1', className]}>
    {label}
    <input
        {...rest}
        class=`font-bold text-md border-black text-white dark:text-slate-900 transition-colors w-full h-10 rounded-sm appearance-none checked:bg-black bg-black dark:checked:bg-white dark:bg-slate-300 [&[type="text"]]:px-4 [&[type="text"]]:py-6`
    />
</label>
