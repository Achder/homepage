---
type Props = {
    id: string
    rounded?: boolean
    class?: string
}

const { id, rounded, class: className } = Astro.props
const { pathname } = Astro.url
---

<button
    id={id}
    class:list={[
        'px-8 py-2 font-bold text-xs tracking-widest bg-dark hover:bg-brand text-brand hover:text-dark transition-colors',
        className,
        {
            'rounded-sm': !rounded,
            'rounded-full': rounded,
        },
    ]}
    data-umami-event={`clicked ${id} on ${pathname}`}
>
    <slot />
</button>
