---
type Props = {
    id: string
    rounded?: boolean
    class?: string
}

const { id, rounded, class: className } = Astro.props
const { pathname } = Astro.url
---

<button
    id={id}
    class:list={[
        'px-8 py-3 font-bold text-md tracking-widest bg-black dark:bg-slate-300 hover:bg-fuchsia-500 text-white dark:text-slate-900 transition-colors',
        className,
        {
            'rounded-sm': !rounded,
            'rounded-full': rounded,
        },
    ]}
    data-umami-event={`clicked ${id} on ${pathname}`}
>
    <slot />
</button>
