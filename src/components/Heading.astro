---
type Props = {
    type: keyof Pick<astroHTML.JSX.DefinedIntrinsicElements, 'h1' | 'h2' | 'h3' | 'h4'>
    class?: string
}

const { class: className, type: Type, ...rest } = Astro.props
---

<Type
    {...rest}
    class:list={[
        'font-extrabold m-0 leading-[0.8] italic text-balance text-white underline underline-offset-8 decoration-black decoration-8',
        {
            'text-7xl': Type === 'h1',
            'text-6xl ': Type === 'h2',
            'text-2xl': Type === 'h3',
        },
        className,
    ]}
>
    <slot />
</Type>
