---
type Props = {
    href: string
    class?: string
}

const { href, class: className, ...rest } = Astro.props
---

<a
    href={href}
    class:list={[
        className,
        'bg-dark rounded-full text-white px-10 py-6 font-extrabold tracking-wider flex gap-4 whitespace-nowrap transition-all hover:scale-105 shadow-md/30 hover:shadow-lg/50 shadow-black',
    ]}
    {...rest}
>
    <slot />
</a>
