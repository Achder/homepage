---
import { Image } from 'astro:assets'
type Props = {
    id?: string
    src: ImageMetadata
    class?: string
}

const { id, src, class: className } = Astro.props
---

<Image
    id={id}
    class="hover:scale-110 transition-all bg-black aspect-[1/1.414] rounded-sm"
    src={src}
    alt=""
    loading="eager"
/>
