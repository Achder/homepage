---
import { Image } from 'astro:assets'
type Props = {
    id?: string
    src: ImageMetadata
    class?: string
}

const { id, src, class: className } = Astro.props
---

<Image
    id={id}
    class="shadow-md border-4 border-black hover:scale-105 transition-transform w-100 bg-black aspect-[1/1.414]"
    src={src}
    alt=""
    loading="eager"
/>
