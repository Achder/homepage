<style is:global>
	@font-face {
		font-family: "Rethink Sans";
		font-style: normal;
		font-weight: 400;
		src: url("/fonts/RethinkSans-Regular.woff2") format("woff2");
	}

	@font-face {
		font-family: "Rethink Sans";
		font-style: normal;
		font-weight: 800;
		src: url("/fonts/RethinkSans-ExtraBold.woff2") format("woff2");
	}

	*, *::after, *::before {
		box-sizing: border-box;
	}

	:root {
		--dark: #2c2c2c;
		--light: white;
		--pink: #d900ff;
		--shadow-color: rgba(0, 0, 0, 0.1);
		--border-radius: 0px;
	}

	a {
		color: var(--dark);
		transition: all 100ms ease-out;
	}

	a:hover {
		color: var(--pink);
	}

	h1, h2 {
		font-size: calc(1rem + 8cqi);
		color: var(--dark);
		font-weight: 800;
		margin: 0;
		line-height: 1;
		text-wrap: balance;
	}

	p {
		margin: 0;
		font-size: 1.3rem;
		color: #6d6d6d;
	}

	p > strong {
		color: var(--dark);
	}

	h3 {
		margin: 0;
		font-size: 1.5rem;
		color: var(--dark);
	}

	.snap {
		scroll-snap-align: start;
	} 

    strong {
        font-size: 1.5rem;
		font-weight: 800;
    }

	article {
		display: grid;
		gap: 1rem;
	}
</style>

<style>
	html, 
	body {
		margin: 0;
		padding: 0;
		font-family: 'Rethink Sans', 'Trebuchet MS', sans-serif;
		font-weight: 400;
		background-color: var(--light);
	}

	html {
		scrollbar-gutter: stable;
		scroll-snap-type: y mandatory;
		overflow-x: clip;
	}

	body {
		min-height: 100dvh;
		max-width: 768px;
		margin-inline: auto;
		padding: 0 1rem;

		display: grid;
		grid-template-columns: 1fr 1fr;
		grid-template-rows: auto 1fr auto;
		grid-template-areas: 
			'page-nav social-nav'
			'main main'
			'footer footer';
		align-content: start;

		container-name: body;
		container-type: inline-size;
	}


	.page-nav {
		grid-area: page-nav;
	}

	.social-nav {
		grid-area: social-nav;
	}

	main {
		grid-area: main;
		padding: 1rem 0;
		display: grid;
		gap: 3rem;
		align-content: start;
		justify-items: start;
	}

	footer {
		grid-area: footer;
		justify-self: end;
		display: flex;
		gap: 1rem;
		padding: 1rem 0;
	}
	
	@media (width <= 500px) {

        body {
			grid-template-columns: 1fr;
			grid-template-rows: auto 1fr auto auto;
			grid-template-areas: 
				'page-nav'
				'main'
				'social-nav'
				'footer';
		}

		.social-nav {
			justify-self: center;
		}

		footer {
			justify-self: center;
		}
	}
</style>

<script>
	import { polyfill } from "seamless-scroll-polyfill"

	polyfill()
</script>