<style is:global>
	@font-face {
		font-family: "Rethink Sans";
		font-style: normal;
		font-weight: 400;
		src: url("/fonts/RethinkSans-Regular.woff2") format("woff2");
	}

	@font-face {
		font-family: "Rethink Sans";
		font-style: normal;
		font-weight: 800;
		src: url("/fonts/RethinkSans-ExtraBold.woff2") format("woff2");
	}

	*, *::after, *::before {
		box-sizing: border-box;
	}

	:root {
		--dark: #2c2c2c;
		--light: white;
		--pink: #d900ff;
		--shadow-color: rgba(0, 0, 0, 0.1);
		--border-radius: 0px;
	}

	a {
		color: var(--dark);
		display: flex;
		align-items: center;
		transition: all 100ms ease-out;
	}

	a:hover {
		color: var(--pink);
	}
</style>

<style>
	html, 
	body {
		margin: 0;
		padding: 0;
		font-family: 'Rethink Sans', 'Trebuchet MS', sans-serif;
		font-weight: 400;
	}

	body {
		min-height: 100dvh;
		max-width: 768px;
		margin-inline: auto;
		padding: 0 1rem;

		display: grid;
		grid-template-columns: 1fr 1fr;
		grid-template-rows: auto 1fr auto;
		grid-template-areas: 
			'page-nav social-nav'
			'main main'
			'footer footer';
		align-content: start;

		container-name: body;
		container-type: inline-size;
	}

	.page-nav {
		grid-area: page-nav;
		position: sticky;
		top: 0;
	}

	.social-nav {
		grid-area: social-nav;
		position: sticky;
		top: 0;
	}

	main {
		grid-area: main;
		padding: calc(1rem + 4cqi) 0;
		display: grid;
		gap: calc(1rem + 1cqi);
		align-content: start;
		justify-items: start;
	}

	footer {
		grid-area: footer;
		justify-self: end;
		display: flex;
		gap: 1rem;
		padding: 1rem 0;
	}
	
	@container(max-width: 500px) {
		footer {
			justify-self: center;
		}
	}
</style>